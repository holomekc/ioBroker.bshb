{
  "name": "iobroker.bshb",
  "version": "0.1.14",
  "description": "Connects Bosch Smart Home Interface-Processes to ioBroker",
  "author": {
    "name": "Christopher Holomek",
    "email": "holomekc.github@gmail.com"
  },
  "homepage": "https://github.com/holomekc/ioBroker.bshb",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "Bosch Smart Home",
    "Smart Home",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/holomekc/ioBroker.bshb"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.5.1",
    "bosch-smart-home-bridge": "^1.0.0",
    "rxjs": "^7.3.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^2.2.0",
    "@iobroker/testing": "^2.4.4",
    "@types/chai": "^4.2.20",
    "@types/chai-as-promised": "^7.1.4",
    "@types/gulp": "^4.0.9",
    "@types/mocha": "^8.2.3",
    "@types/node": "^14.17.4",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "axios": "^0.21.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.30.0",
    "gulp": "^4.0.2",
    "mocha": "^9.1.1",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.1",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "main": "build/main.js",
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --opts test/mocha.custom.opts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "coverage": "nyc npm run test:ts",
    "lint": "eslint --ext .ts src",
    "pack": "npm run build && npm pack"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/holomekc/ioBroker.bshb/issues"
  },
  "readmeFilename": "README.md"
}
