{
  "name": "iobroker.bshb",
  "version": "0.2.4",
  "description": "Connects Bosch Smart Home Interface-Processes to ioBroker",
  "author": {
    "name": "Christopher Holomek",
    "email": "holomekc.github@gmail.com"
  },
  "homepage": "https://github.com/holomekc/ioBroker.bshb",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "Bosch",
    "Smart Home"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/holomekc/ioBroker.bshb"
  },
  "engines": {
    "node": ">= 16"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.6.8",
    "bosch-smart-home-bridge": "^1.2.2",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@iobroker/adapter-dev": "^1.2.0",
    "@iobroker/testing": "^4.1.0",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.11",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@tsconfig/node16": "^1.0.3",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.39.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^5.0.0",
    "sinon": "^15.0.3",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "express": "^4.18.2"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "coverage": "nyc npm run test:ts",
    "lint": "eslint --ext .ts src/",
    "release": "release-script",
    "pack": "npm run build && npm pack",
    "translate": "translate-adapter"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/holomekc/ioBroker.bshb/issues"
  },
  "readmeFilename": "README.md"
}
