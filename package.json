{
  "name": "iobroker.bshb",
  "version": "0.2.7",
  "description": "Connects Bosch Smart Home Interface-Processes to ioBroker",
  "author": {
    "name": "Christopher Holomek",
    "email": "holomekc.github@gmail.com"
  },
  "homepage": "https://github.com/holomekc/ioBroker.bshb",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "Bosch",
    "Smart Home"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/holomekc/ioBroker.bshb"
  },
  "engines": {
    "node": ">= 16"
  },
  "dependencies": {
    "@iobroker/adapter-core": "3.0.4",
    "bosch-smart-home-bridge": "1.4.1",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@iobroker/adapter-dev": "1.3.0",
    "@iobroker/testing": "4.1.1",
    "@types/chai": "4.3.11",
    "@types/chai-as-promised": "7.1.8",
    "@types/mocha": "10.0.6",
    "@types/node": "16.18.66",
    "@types/proxyquire": "1.3.31",
    "@types/sinon": "17.0.3",
    "@types/sinon-chai": "3.2.12",
    "@typescript-eslint/eslint-plugin": "7.0.0",
    "@typescript-eslint/parser": "7.3.1",
    "@tsconfig/node16": "16.1.1",
    "chai": "4.4.1",
    "chai-as-promised": "7.1.1",
    "eslint": "8.57.0",
    "mocha": "10.3.0",
    "nyc": "15.1.0",
    "proxyquire": "2.1.3",
    "rimraf": "5.0.5",
    "sinon": "17.0.1",
    "sinon-chai": "3.7.0",
    "source-map-support": "0.5.21",
    "ts-node": "10.9.2",
    "typescript": "5.4.2",
    "express": "4.18.3"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "coverage": "nyc npm run test:ts",
    "lint": "eslint --ext .ts src/",
    "release": "release-script",
    "pack": "npm run build && npm pack",
    "translate": "translate-adapter"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/holomekc/ioBroker.bshb/issues"
  },
  "readmeFilename": "README.md"
}
